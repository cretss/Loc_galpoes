import folium
from folium.plugins import MousePosition
import numpy as np
from folium.plugins import HeatMap
import branca.colormap
import osmnx as ox
import geopandas as gpd
import pandas as pd
import openpyxl

mapa_br = folium.Map([-23.55, -46.64], zoom_start=3,tiles= None)

MousePosition().add_to(mapa_br)

folium.TileLayer(tiles=branca.utilities.image_to_url([[1,1],[1,1]]),attr="EESC Finance",name="Imagem Fundo").add_to(mapa_br)

# Estilo do GeoJson
style = lambda x: {"color": "Black", "fillOpacity": 0, "weight": 1}

# Fronteira dos municípios
arquivo_geojson = "Brasil.json"
folium.GeoJson(arquivo_geojson, style_function=style, name="distritos").add_to(mapa_br)

# Lista dos pontos com comentários
pontos = [
