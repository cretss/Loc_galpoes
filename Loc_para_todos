# Adicionando os pontos no mapa
for cidade, lat, lon in pontos:
    folium.Marker(
        location=[lat, lon],
        popup=folium.Popup(cidade, parse_html=True),
        tooltip=cidade,
        icon=folium.Icon(color='green', icon='info-sign')
    ).add_to(mapa_br)

